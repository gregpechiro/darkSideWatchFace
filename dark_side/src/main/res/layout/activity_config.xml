<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/watch_face_background"
        android:layout_width="@dimen/settings_preview_size"
        android:layout_height="@dimen/settings_preview_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/complication_preview_dark_side" />


    <ImageView
        android:id="@+id/upper_left_complication_background"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/upper_left_complication"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:background="@android:color/transparent"
        android:src="@drawable/added_complication" />

    <ImageButton
        android:id="@+id/upper_left_complication"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/lower_left_complication_background"
        android:layout_alignTop="@+id/upper_left_complication_background"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/upper_right_complication_background"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lower_left_complication_background"
        android:layout_alignStart="@+id/upper_right_complication"
        android:background="@android:color/transparent"
        android:src="@drawable/added_complication" />

    <ImageButton
        android:id="@+id/upper_right_complication"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lower_right_complication_background"
        android:layout_alignTop="@+id/upper_right_complication_background"
        android:layout_marginStart="22dp"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/lower_left_complication_background"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/upper_left_complication_background"
        android:layout_marginTop="23dp"
        android:background="@android:color/transparent"
        android:src="@drawable/added_complication" />

    <ImageButton
        android:id="@+id/lower_left_complication"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/lower_left_complication_background"
        android:background="@android:color/transparent" />

    <ImageView
        android:id="@+id/lower_right_complication_background"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/lower_left_complication"
        android:background="@android:color/transparent"
        android:src="@drawable/added_complication" />

    <ImageButton
        android:id="@+id/lower_right_complication"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lower_right_complication_background"
        android:layout_alignTop="@+id/lower_right_complication_background"
        android:background="@android:color/transparent" />
</RelativeLayout>
